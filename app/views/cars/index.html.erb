<p id="notice"><%= notice %></p>

<h1>Listing Cars</h1>
<h2> Most expensive car is: <%= @most_expensive_car %></h2>
<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>HP</th>
      <th>Model</th>
      <th>Stock</th>
      <th>Price</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <p>Test ffff</p>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.color %></td>
        <td><%= car.hp %></td>
        <td><%= car.model %></td>
        <td><%= car.stock %></td>
        <td><%= car.price %></td>
        <td><%= car.total_value %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

